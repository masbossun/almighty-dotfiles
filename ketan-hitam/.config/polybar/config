[module/ewmh]
type = internal/xworkspaces

pin-workspaces = true

icon-0 = code;♚
icon-1 = office;♛
icon-2 = graphics;♜
icon-3 = mail;♝
icon-4 = web;♞
icon-default = ♟

format = <label-state>

; Available tokens:
;   %name%
; Default: %name%
label-monitor = %name%

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-active = %name%
label-active-padding = 1
label-active-foreground = #ffffff
; label-active-background = ${colors.colorBackground}
label-active-overline= ${colors.colorOverline}

label-occupied = %name%
label-occupied-padding = 1
label-occupied-underline = #555555

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-underline = #9b0a20

; label-active-underline= ${xrdb:color7:#222}
; label-active-foreground= ${xrdb:color5:#222}

